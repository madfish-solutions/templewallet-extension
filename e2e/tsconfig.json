{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "src/*": ["../src/*"],
    },
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
}
